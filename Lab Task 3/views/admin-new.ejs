<!-- Admin Panel -->
<div class="admin-wrapper">
    <!-- Admin Header with Navigation -->
    <div class="admin-top-nav">
        <div class="admin-nav-container">
            <h2 class="admin-brand">
                <i class="fas fa-horse"></i> Admin Dashboard
            </h2>
            <div class="admin-nav-links">
                <a href="/admin" class="admin-nav-link active">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="#products" class="admin-nav-link">
                    <i class="fas fa-box"></i> Products
                </a>
                <a href="/admin" class="admin-nav-link">
                    <i class="fas fa-shopping-bag"></i> Orders
                </a>
                <a href="/admin" class="admin-nav-link">
                    <i class="fas fa-users"></i> Users
                </a>
                <a href="/admin" class="admin-nav-link">
                    <i class="fas fa-cog"></i> Settings
                </a>
                <a href="/" class="admin-nav-link admin-logout">
                    <i class="fas fa-sign-out-alt"></i> Back to Site
                </a>
            </div>
        </div>
    </div>

    <div class="admin-container">
        <!-- Admin Content -->
        <div class="admin-content">
            <!-- Dashboard Stats -->
            <div class="admin-stats">
                <div class="stat-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #917547 0%, #a6855c 100%);">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stat-info">
                        <h3>Total Orders</h3>
                        <p class="stat-number">1,247</p>
                        <span class="stat-change">+12% from last month</span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #8a6b3c 0%, #917547 100%);">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-info">
                        <h3>Total Revenue</h3>
                        <p class="stat-number">$45,320</p>
                        <span class="stat-change">+28% from last month</span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #c4a67a 0%, #8a6b3c 100%);">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3>Total Customers</h3>
                        <p class="stat-number">892</p>
                        <span class="stat-change">+8% from last month</span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #917547 0%, #c4a67a 100%);">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-info">
                        <h3>Products</h3>
                        <p class="stat-number">156</p>
                        <span class="stat-change">12 new this month</span>
                    </div>
                </div>
            </div>

            <!-- Main Actions -->
            <div class="admin-actions">
                <h2 class="section-title">Quick Actions</h2>
                <div class="actions-grid">
                    <a href="/admin/product/create" class="action-card">
                        <i class="fas fa-plus-circle"></i>
                        <h3>Add New Product</h3>
                        <p>Create a new product listing</p>
                    </a>
                    <a href="/admin/orders" class="action-card">
                        <i class="fas fa-list"></i>
                        <h3>View Orders</h3>
                        <p>Manage customer orders</p>
                    </a>
                    <a href="/admin/users" class="action-card">
                        <i class="fas fa-user-tie"></i>
                        <h3>Manage Users</h3>
                        <p>View and edit user accounts</p>
                    </a>
                    <a href="/admin/settings" class="action-card">
                        <i class="fas fa-sliders-h"></i>
                        <h3>Settings</h3>
                        <p>Configure store settings</p>
                    </a>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="admin-section">
                <h2 class="section-title">Recent Orders</h2>
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#ORD-001247</td>
                                <td>John Smith</td>
                                <td>$245.99</td>
                                <td><span class="status-badge delivered">Delivered</span></td>
                                <td>Dec 15, 2025</td>
                                <td>
                                    <button class="btn-action view" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-action edit" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>#ORD-001246</td>
                                <td>Sarah Johnson</td>
                                <td>$189.50</td>
                                <td><span class="status-badge pending">Pending</span></td>
                                <td>Dec 14, 2025</td>
                                <td>
                                    <button class="btn-action view" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-action edit" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>#ORD-001245</td>
                                <td>Michael Brown</td>
                                <td>$567.25</td>
                                <td><span class="status-badge processing">Processing</span></td>
                                <td>Dec 13, 2025</td>
                                <td>
                                    <button class="btn-action view" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-action edit" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Products Overview -->
            <div class="admin-section" id="products">
                <h2 class="section-title">Products (<%= products && products.length ? products.length : 0 %>)</h2>
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Sales</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (products && products.length) { %>
                                <% products.forEach(function(p) { %>
                                    <tr>
                                        <td><%= p.name %></td>
                                        <td><%= p.category || '-' %></td>
                                        <td>$<%= p.price ? p.price.toFixed(2) : '0.00' %></td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td class="table-actions">
                                            <a class="btn-action edit" href="/admin/product/edit/<%= p._id %>" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn-action delete" href="/admin/product/delete/<%= p._id %>" title="Delete" onclick="return confirm('Delete this product?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="text-align:center; color:#917547; font-weight:600;">No products yet. <a href="/admin/product/create">Add your first product</a>.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

